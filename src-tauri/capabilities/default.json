{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "enables the default permissions",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    {
      "identifier": "core:invoke",
      "commands": [
        "app_connection",
        "manual_sync_cards",
        "remove_card",
        "update_card",
        "update_server"
      ]
    },
    {
      "identifier": "opener:allow-open-url",
      "allow": [
        {
          "url": "https://app.transportklok.nl/*"
        },
        {
          "url": "http://127.0.0.1:8000/*"
        }
      ]
    }
  ]
}
